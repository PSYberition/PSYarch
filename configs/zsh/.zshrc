# ──────────────────────────────────────────────────────────────────────────────────────────────
  source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
# ──────────────────────────────────────────────────────────────────────────────────────────────
  PROMPT=" %~ %(?.%F{#aacc00}%(!.#.󰅂)%f.%F{#ff5555}%(!.#.󰅂)%f) "
  RPROMPT=" %F{#cc3333}%(?..%?)%f %n@%m"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  HISTFILE=~/.cache/zsh/history
  HISTSIZE=10000
  SAVEHIST=10000
# ──────────────────────────────────────────────────────────────────────────────────────────────
  alias clear="clear && fastfetch | head -n -1 | lolcat"
  alias zsh="exec zsh"
  alias cat="bat -p"
  alias man="batman"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  bindkey -v
# ──────────────────────────────────────────────────────────────────────────────────────────────
  clear
# ──────────────────────────────────────────────────────────────────────────────────────────────
