plugin:dynamic-cursors { # ─────────────────────────────────────────────────────────────────────
  enabled = true
  mode = stretch
# ──────────────────────────────────────────────────────────────────────────────────────────────
  stretch:limit = 2000
  stretch:function = negative_quadratic
  stretch:window = 100
# ──────────────────────────────────────────────────────────────────────────────────────────────
  shaperule = text, tilt, tilt:limit: 2000
} # ────────────────────────────────────────────────────────────────────────────────────────────
