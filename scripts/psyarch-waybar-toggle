#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  f="$HOME/.config/hypr/psyarch/waybar.conf"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  grep -q "0 312 0 312" "$f" && sed -i 's/0 312 0 312/14 312 14 312/g' "$f"
  grep -q "0,14,0,14" "$f" && sed -i 's/0,14,0,14/14,14,14,14/g' "$f"
  pkill waybar && exit
# ──────────────────────────────────────────────────────────────────────────────────────────────
  grep -q "14 312 14 312" "$f" && sed -i 's/14 312 14 312/0 312 0 312/g' "$f"
  grep -q "14,14,14,14" "$f" && sed -i 's/14,14,14,14/0,14,0,14/g' "$f"
  waybar && exit
# ──────────────────────────────────────────────────────────────────────────────────────────────
