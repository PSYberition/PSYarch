#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  SINKS=$(wpctl status | grep -m1 -A99 "Sinks" | grep -m1 -B99 "^ │  $" | head -n -1 | tail -n +2 | sed 's/^[^0-9]*//' | cut -d '.' -f1)
  SINK=$(wpctl status | grep -m1 \* | awk '{print $3}' | cut -d '.' -f1)
  ARRAY=($SINKS)
# ──────────────────────────────────────────────────────────────────────────────────────────────
  for i in "${!ARRAY[@]}"; do [[ "${ARRAY[$i]}" == "$SINK" ]] && INDEX=$i && break; done
  NEXT=$(( (INDEX + 1) % ${#ARRAY[@]} ))
# ──────────────────────────────────────────────────────────────────────────────────────────────
  wpctl set-default "${ARRAY[$NEXT]}"
# ──────────────────────────────────────────────────────────────────────────────────────────────
