#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
APP=$(basename "$0"); pikaur -S --needed --noconfirm $APP \
  ffmpegthumbnailer gst-libav gst-plugins-good gst-plugins-bad gst-plugins-ugly
# ──────────────────────────────────────────────────────────────────────────────────────────────
gsettings set org.gnome.nautilus.preferences show-image-thumbnails 'always'
# ──────────────────────────────────────────────────────────────────────────────────────────────
