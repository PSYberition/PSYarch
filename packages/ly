#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  APP=$(basename "$0"); pikaur -S --needed --noconfirm $APP
# ──────────────────────────────────────────────────────────────────────────────────────────────
  sudo cp -r "$(dirname "$0")/../configs/$APP" "/etc"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  systemctl enable ly@tty2.service
# ──────────────────────────────────────────────────────────────────────────────────────────────
