#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  pikaur -S --needed --noconfirm $(basename "$0") yazi
  cp -r "$(dirname "$0")/../config/nvim" "$HOME/.config/nvim"
  cp -r "$(dirname "$0")/../config/yazi" "$HOME/.config/yazi"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  sudo ln -f /usr/bin/nvim /usr/bin/vi
# ──────────────────────────────────────────────────────────────────────────────────────────────
