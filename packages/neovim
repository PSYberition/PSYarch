#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  APP=$(basename "$0"); pikaur -S --needed --noconfirm $APP \
    git yazi wl-clipboard
# ──────────────────────────────────────────────────────────────────────────────────────────────
  cp -r "$(dirname "$0")/../configs/nvim" "$HOME/.config"
  cp -r "$(dirname "$0")/../configs/yazi" "$HOME/.config"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  sudo ln -f /usr/bin/nvim /usr/bin/vi
# ──────────────────────────────────────────────────────────────────────────────────────────────
