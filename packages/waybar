#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
APP=$(basename "$0"); pikaur -S --needed $APP \
  gtkmm3 jsoncpp libsigc++ fmt wayland chrono-date spdlog gtk3 gobject-introspection \
  libgirepository libpulse libnl libappindicator-gtk3 libdbusmenu-gtk3 libmpdclient \
  sndio libevdev libxkbcommon upower meson cmake scdoc wayland-protocols glib2-devel
# ──────────────────────────────────────────────────────────────────────────────────────────────
cp -r "$(dirname "$0")/../configs/$APP" "$HOME/.config"
# ──────────────────────────────────────────────────────────────────────────────────────────────
