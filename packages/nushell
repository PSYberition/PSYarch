#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  pikaur -S --needed --noconfirm $(basename "$0") fastfetch lolcat
  cp -r "$(dirname "$0")/../config/nushell" "$HOME/.config/nushell"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  chsh -s /usr/bin/nu
# ──────────────────────────────────────────────────────────────────────────────────────────────
