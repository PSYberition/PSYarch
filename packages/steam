#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  APP=$(basename "$0"); pikaur -S --needed --noconfirm $APP \
    gamescope
# ──────────────────────────────────────────────────────────────────────────────────────────────
  sudo locale-gen en_US.UTF-8 && sudo localectl set-locale LANG=en_US.UTF-8
# ──────────────────────────────────────────────────────────────────────────────────────────────
  echo "vm.max_map_count=262144" | sudo tee /etc/sysctl.d/99-vm-max_map_count.conf
  sudo sysctl --system
# ──────────────────────────────────────────────────────────────────────────────────────────────
  pikaur -S protonup-qt
# ──────────────────────────────────────────────────────────────────────────────────────────────
