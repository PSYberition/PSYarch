#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  DRIVERS=("Nvidia" "AMD" "Intel")
# ──────────────────────────────────────────────────────────────────────────────────────────────
  if ! command -v steam > /dev/null 2>&1; then
    DRIVER=$(printf '%s\n' "${DRIVERS[@]}" | fzf)
    if [[ -n $DRIVER ]]; then case $DRIVER in
      "Nvidia") pikaur -S --needed --noconfirm nvidia-utils lib32-nvidia-utils $(basename "$0");;
      "AMD") pikaur -S --needed --noconfirm vulkan-radeon lib32-vulkan-radeon $(basename "$0");;
      "Intel") pikaur -S --needed --noconfirm vulkan-intel lib32-vulkan-intel $(basename "$0");;
    esac; else exit 1; fi
  fi
# ──────────────────────────────────────────────────────────────────────────────────────────────
  APP=$(basename "$0"); pikaur -S --needed --noconfirm $APP \
    gamescope
# ──────────────────────────────────────────────────────────────────────────────────────────────
