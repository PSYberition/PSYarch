#!/usr/bin/env bash
# ──────────────────────────────────────────────────────────────────────────────────────────────
  repo="https://github.com/g5becks/Cartograph.git"
# ──────────────────────────────────────────────────────────────────────────────────────────────
  mkdir -p "$HOME/.local/share/fonts"
  git clone "$repo" "$HOME/.local/share/fonts/cartograph-cf"
  fc-cache -fv
# ──────────────────────────────────────────────────────────────────────────────────────────────
